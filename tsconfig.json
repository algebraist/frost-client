{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "outDir": "./dist",
    "declaration": true
  },
  "include": [
    "./src/**/*",
    "./src/**/*.test.ts",
    "./typings/**/*"
  ]
}
